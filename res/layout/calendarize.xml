<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendarize_scrollable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calendarize_calendar" />

        <Spinner
            android:id="@+id/calendarize_calendar_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calendarize_from" />

        <LinearLayout
            android:id="@+id/calendarize_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/calendarize_date_button"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/ellipsis" />

            <Button
                android:id="@+id/calendarize_time_button"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ellipsis" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/calendarize_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/calendarize_allday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calendarize_allday" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>